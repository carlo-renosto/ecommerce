
<link rel="stylesheet" type="text/css" href="/css/perfil.css">

<h1>Perfil</h1>

 <div>
    <div id="div-user">
        <div id="div-container">
            <div id="div-content">
                <h3>Nombre: {{user.fullName}}</h3>
                <h3>Rol: {{user.role}}</h3>
                <hr>
                <h3>Carrito</h3>
                <hr>                
                {{#each user.products}}
                <ul>
                    <li>
                        <p>{{this.product.title}}</p>
                        <p>Cantidad: {{this.quantity}}</p>
                    </li>
                </ul> 
                {{/each}}
                {{#unless user.products.length}}
                    <p>Tu carrito se encuentra vac√≠o.</p>
                {{/unless}}
            </div>
        </div>
    </div>