
<style>
    table {
        border: 1px solid black;
    }
    th {
         border: 1px solid black;
         padding: 5px;
    }
    td {
        border: 1px solid black;
        padding: 5px;
    }
</style>

<table>
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Codigo</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoria</th>
        <th>Imagen</th>
    </tr>
    {{#each products}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.code}}</td>
        <td>${{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{this.thumbnail }}</td>
    </tr>
    {{/each}}
</table>